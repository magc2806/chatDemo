<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">
  <section class='flex flex-col items-center gap-1'>
    <%= image_tag('chat_logo.jpeg', width: 100)%>
    <h2 class='font-bold text-4x1 text-white my-4'> Chat App </h2>
    <p class='text-center font-semibold text-white'>This is a chat app with RoR 7</p>
  </section>

<section class='flex flex-col items-center'>

  <h2 class='text-white font-bold text-2x1 mb-5'>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex gap-1 my-2 items-center w-96">
      <%= f.label :email, class: 'text-white font-semibold text-sm w-24' %><br />
      <%= f.email_field :email, class: 'text-sm font-medium rounded w-full', autofocus: true, autocomplete: "email" %>
    </div>

    <div class='flex flex-col my-5 justify-center'>
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password, class: 'text-white font-semibold text-sm w-24' %>
        <%= f.password_field :password, class: 'text-sm font-medium rounded w-full', autocomplete: "new-password" %>
      </div>
      <div class='flex w-full items-center justify-end'>
          <% if @minimum_password_length %>
          <em class='text-white font-semibold text-sm'>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
    </div>

    <div class="flex gap-1 my-2 items-center w-96">
      <%= f.label :password_confirmation, class: 'text-white font-semibold text-sm w-24' %><br />
      <%= f.password_field :password_confirmation, class: 'text-sm font-medium rounded w-full', autocomplete: "new-password" %>
    </div>

    <div class="flex gap-1 my-5 items-center justify-center">
      <%= f.submit "Sign up", class: 'bg-green-800 rounded p-3 text-white font-semibold' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </section>
</main>
